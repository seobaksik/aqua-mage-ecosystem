{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "version": "1.0.0-genesis",
  "npmClient": "npm",
  "command": {
    "publish": {
      "ignoreChanges": ["*.md"],
      "message": "chore(release): publish %v"
    },
    "bootstrap": {
      "ignore": "component-*"
    }
  },
  "packages": ["packages/*", "apps/*"]
}
